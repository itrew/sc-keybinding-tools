{
	"useTabs": true,
	"singleQuote": true,
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": ["*.md", "*.toml", "*.yml"],
			"options": {
				"useTabs": false
			}
		}
	]
}
